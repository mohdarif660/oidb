@model IEnumerable<OIDBMVCWEBSITE.Areas.Webmaster.Models.UserDesignationTypeViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Webmaster/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <a href="@Url.Action("Create")" class="btn btn-success">Add New User</a>
            @*   <a href="#" class="btn btn-success">Add New User</a>*@
        </div>
    </div>
</div>

<div id='myModal' class='modal fade in'>
    <div id='myModalContent'></div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title "><i class="fa fa-user"></i> Users Details</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Sr.No</th>
                                    <th>Name</th>
                                    <th>User Name</th>
                                    @*<th>Desigation Name</th>*@
                                    <th>Email</th>
                                    <th>User Type</th>
                                    <th>Address</th>
                                    <th>Contact No</th>
                                    <th>Organisation</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int m = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @(m++).
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.Desigation_Name)
                                            </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PType)
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrgnisationName)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", new { id = item.UserID })" title="Edit User"><i class="fa fa-edit fa-2x text-success"></i><span class="sr-only">Edit</span></a>
                                            <a href="#" id="Deleteanchor" data-id="@item.UserID" title="Delete User"><i class="fa fa-trash fa-2x text-danger"></i><span class="sr-only">Delete</span></a>
                                            <a href="@Url.Action("SetPermission","SetPermission", new { id = item.UserID })" title="Set Permission"><i class="fa fa-user fa-2x text-info"></i><span class="sr-only">Set Permission</span></a>
                                            <a href="#" id="ChangePassword" data-id="@item.UserID" title="Change Password"><i class="fa fa-lock fa-2x"></i><span class="sr-only">Change Password</span></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

