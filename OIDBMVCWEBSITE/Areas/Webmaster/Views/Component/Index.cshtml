@model IEnumerable<OIDBMVCWEBSITE.Models.st_components>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Webmaster/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .GroupHeaderStyle {
        border: solid 0px Black;
        background-color: #4682B4;
        color: #ffffff;
        font-weight: bold;
        text-align: center;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <a id="AddComponent" data-id="0" class="btn btn-success AddComponentclass">Add New Component</a>
            @*<a id="AddComponent" onclick="AddEditEmployee(0)" class="btn btn-success">Add New Component</a>*@
        </div>
    </div>
</div>

<div id='myModal' class='modal fade in'>
    <div id='myModalContent'></div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title "><i class="fa fa-user"></i> Components Details</h3>
            </div>
            <div class="panel-body">
                <div class="row">

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Sr.No.
                                    </th>
                                    <th>
                                      Module Name
                                    </th>
                                    <th>
                                       Component Name
                                    </th>

                                    <th>
                                        Add/Edit/Delete Option
                                    </th>
                                    <th>
                                        Component File
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int sr = 1; }
                                @foreach (var item1 in Model.GroupBy(x => x.comp_type))
                                {

                                    <tr>
                                        <td colspan="6" class="GroupHeaderStyle">
                                            Component Type :  @item1.Key
                                        </td>
                                    </tr>
                                    foreach (var item in item1)
                                    {

                                        <tr>
                                            <td>
                                                @(sr++).
                                            </td>
                                            <td>

                                                @Html.DisplayFor(modelItem => item.st_module.module_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.comp_name)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.add_del)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.comp_file)
                                            </td>
                                            <td>
                                                <a href="#" id="EditComponent" data-id="@item.comp_id" class="AddComponentclass" ><i class="fa fa-edit fa-2x text-success"></i></a>
                                                <a href="#" id="DeleteanchorComp" data-id="@item.comp_id" ><i class="fa fa-trash fa-2x text-success"></i></a>
                                              
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 

