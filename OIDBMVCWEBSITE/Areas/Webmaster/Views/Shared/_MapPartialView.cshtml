@model List<OIDBMVCWEBSITE.Areas.Webmaster.Models.MapComponentViewModel>
<script src="~/Areas/Webmaster/Customjs/CustomMethod.js"></script>
@using (Html.BeginForm("Index", "Mapcomponent", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{ 
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title "><i class="fa fa-user"></i> Components Details</h3>
                </div>

                <div class="panel-body">

                    @if (Model != null && Model.Count > 0)
                {
                    <div class="row">

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>

                                        <th>
                                            Sr.No.
                                        </th>
                                        <th>
                                            Component Type
                                        </th>
                                        <th>
                                            Component Name
                                        </th>
                                        <th>
                                            Select All @Html.CheckBox("CheckBoxAll")
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{ int m = 1;}
                                    @for (int i = 0; i < Model.Count; i++)
                                        {
                                        <tr>
                                            <td>@(m++).</td>
                                            @Html.HiddenFor(modelitem => modelitem[i].Component_Id)
                                            @Html.HiddenFor(modelitem => modelitem[i].UserType_Id)
                                            <td>@Html.DisplayFor(modelitem => modelitem[i].Component_Type)</td>
                                            <td>@Html.DisplayFor(modelitem => modelitem[i].Component_Name)</td>
                                            <td>@Html.CheckBoxFor(modelitem => modelitem[i].MapCheckBox, new { @class = "PerCheckBoxSingle" })</td>
                                        </tr>
                                        }


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="submit" class="btn btn-success" value="Submit" />
                        </div>
                    </div>
                                            }
                                            else
                                            {
                    <div class="row">
                        <div class="col-lg-6">
                            Please Select User Type
                        </div>
                    </div>
                                            }
                </div>

            </div>
        </div>
    </div>
                                        }
