@model List<OIDBMVCWEBSITE.Areas.Webmaster.Models.SetPermissionViewModel>


@using (Html.BeginForm("SetPermission", "SetPermission", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-4">
            <div class="alert alert-dismissable alert-danger">
                <strong>User Name:</strong> @ViewBag.UserName
            </div>
        </div>
        <div class="col-lg-4">
            <div class="alert alert-dismissable alert-success">
                <strong>Email:</strong> @ViewBag.Email
            </div>
        </div>
        <div class="col-lg-4">
            <div class="alert alert-dismissable alert-info">
                <strong>User Type:</strong> @ViewBag.PType
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title "><i class="fa fa-user"></i> Set User Permissions</h3>
                </div>

                <div class="panel-body">
                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="row">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                Sr.No
                                            </th>
                                            <th>
                                                Module Name
                                            </th>
                                            <th>
                                                Component Name
                                            </th>
                                            <th>
                                                ADD <br />
                                                @Html.CheckBox("AddCheckAll")  Select All

                                            </th>
                                            <th>
                                                EDIT<br />
                                                @Html.CheckBox("EditCheckAll")  Select All
                                            </th>
                                            <th>
                                                DELETE<br />
                                                @Html.CheckBox("DeleteCheckAll")  Select All
                                            </th>
                                            <th>
                                                NOT APPLICABLE
                                                <br />
                                                @Html.CheckBox("NACheckAll")  Select All
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{ int m = 1;}
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr>
                                                <td>@(m++).</td>
                                                <td>
                                                    @Html.HiddenFor(modelItem => modelItem[i].Component_Id)
                                                    @Html.HiddenFor(modelItem => modelItem[i].Module_Id)
                                                    @Html.HiddenFor(modelItem => modelItem[i].User_Id)
                                                    @Html.DisplayFor(modelItem => modelItem[i].Module_Name )
                                                </td>
                                                <td> @Html.DisplayFor(modelItem => modelItem[i].Component_Name)</td>
                                                <td> @Html.CheckBoxFor(modelItem => modelItem[i].AddCheckBox,new {@class="AddCheckBoxSingle" }) </td>
                                                <td>  @Html.CheckBoxFor(modelItem => modelItem[i].EditCheckBox,new { @class = "EditCheckBoxSingle" })</td>
                                                <td> @Html.CheckBoxFor(modelItem => modelItem[i].DeletedCheckBox, new { @class = "DeleteCheckBoxSingle" })</td>
                                                <td> @Html.CheckBoxFor(modelItem => modelItem[i].NotApplicableCheckBox, new { @class = "NACheckBoxSingle" }) </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.ActionLink("Back", "Index", "Users", new { area = "Webmaster" }, new { @class = "btn btn-danger" })
                                <input type="submit" class="btn btn-success" value="Submit" />

                            </div>
                        </div>
                                            }
                                            else
                                            {
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        Please Map Component to User Type
                                                    </div>
                                                </div>
                                            }
                </div>

            </div>
        </div>
    </div>
                                            }
 